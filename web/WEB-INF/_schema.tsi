# Schema Definitions
1=CREATE TABLE IF NOT EXISTS _sys_api_users (email VARCHAR(40) NOT NULL PRIMARY KEY,user_name VARCHAR(20) NOT NULL,api_key VARCHAR(50) NOT NULL, api_secret VARCHAR(50) NOT NULL,active SMALLINT NOT NULL DEFAULT 1,created TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP)
2=CREATE TABLE IF NOT EXISTS network_participants_registry(participant_id VARCHAR(6) PRIMARY KEY,participant_name VARCHAR(25) NOT NULL,participant_business_desc VARCHAR(99),participant_type VARCHAR(20) NOT NULL,host_url VARCHAR(99) NOT NULL,public_key TEXT, created_at TIMESTAMP NOT NULL default current_timestamp, modified_at TIMESTAMP NOT NULL default current_timestamp)
3=CREATE TABLE IF NOT EXISTS service_registry(participant_id VARCHAR(6),service_id VARCHAR(6) PRIMARY KEY,version_no VARCHAR(4),service_network VARCHAR(6),service_name VARCHAR(25),service_uri VARCHAR(25),service_desc VARCHAR(99),data_transfer_type VARCHAR(6),request_template TEXT,response_template TEXT,callback_url VARCHAR(99),created_at TIMESTAMP NOT NULL default current_timestamp, last_modified_at TIMESTAMP NOT NULL default current_timestamp)
4=CREATE TABLE IF NOT EXISTS request_queue(request_id BIGSERIAL PRIMARY KEY,participant_id VARCHAR(6),service_id VARCHAR(6),request_data TEXT,response_data TEXT,status VARCHAR(20) NOT NULL,posted_at TIMESTAMP NOT NULL default current_timestamp, last_updated_at TIMESTAMP NOT NULL default current_timestamp)
5=CREATE TABLE IF NOT EXISTS request_archive(request_id BIGINT,participant_id VARCHAR(6),service_id VARCHAR(6),request_data TEXT,response_data TEXT,status VARCHAR(20) NOT NULL,posted_at TIMESTAMP NOT NULL default current_timestamp, last_updated_at TIMESTAMP NOT NULL default current_timestamp)
